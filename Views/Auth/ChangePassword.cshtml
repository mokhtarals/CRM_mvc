@{
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-4">
            <!-- Register -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->

                    <div class="container">
                        <img src="~/assets/img/favicon/crm.png" style="width:100% !important; height:100%;" />
                    </div>
                    <div class="app-brand justify-content-center">
                        <span class="app-brand-text demo h3 fw-bold mb-0">@SystemInfoResource.SystemName</span>

                    </div>

                    <!-- /Logo -->


                    <h2> @FormResources.ChangePassword</h2>
                    <p>@FormResources.ChangeText</p>
                    <form id="formAuthentication" class="mb-3" action="ChangePassword" method="post">

                        @if (ViewBag.ErrorLogin == false)
                        {
                            <div class="mb-3">
                                <span class="alert alert-danger">@FormResources.LoginError</span>
                            </div>
                        }
                        <div class="form-password-toggle mb-3">
                            <label class="form-label" for="password">@FormResources.PasswordOld</label>
                            <div class="input-group input-group-merge">
                                <input type="password"
                                       id="password"
                                       class="form-control"
                                       name="password"
                                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                       aria-describedby="password" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        <div class="form-password-toggle mb-3">
                            <label class="form-label" for="password">@FormResources.PasswordNew </label>
                            <div class="input-group input-group-merge">
                                <input type="password"
                                       id="password"
                                       class="form-control"
                                       name="password"
                                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                       aria-describedby="password" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        <div class="form-password-toggle mb-3">
                            <label class="form-label" for="confirm-password">@FormResources.ConfirmPassword</label>
                            <div class="input-group input-group-merge">
                                <input type="password"
                                       id="confirm-password"
                                       class="form-control"
                                       name="confirm-password"
                                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                       aria-describedby="password" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        <button class="btn btn-primary d-grid w-100 mb-3">@FormResources.Save  </button>

                    </form>


                </div>
            </div>
            <!-- /Register -->
        </div>
    </div>
</div>
